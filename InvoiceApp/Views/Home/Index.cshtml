<!-- Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Home";
    Layout = "_LandingLayout"; // Use special landing layout
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">
                    Simplify Your <span class="text-violet">Invoicing</span>
                </h1>
                <p class="lead mb-4">
                    Create professional invoices in minutes. Track payments, manage customers,
                    and grow your business with our powerful invoicing platform.
                </p>
                <div class="d-flex gap-3 mb-4">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-violet btn-lg px-5">
                        Get Started Free <i class="bi bi-arrow-right"></i>
                    </a>
                    <a href="#features" class="btn btn-outline-violet btn-lg px-5">
                        Learn More
                    </a>
                </div>
                <div class="d-flex gap-4 text-muted">
                    <div>
                        <i class="bi bi-check-circle-fill text-violet"></i> No credit card required
                    </div>
                    <div>
                        <i class="bi bi-check-circle-fill text-violet"></i> Free forever
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="invoice-preview-card">
                        <div class="card shadow-lg">
                            <div class="card-header bg-violet text-white">
                                <h5 class="mb-0"><i class="bi bi-receipt"></i> Invoice Preview</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <small class="text-muted">INVOICE #</small>
                                    <div class="fw-bold">INV-2025-00001</div>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted">BILL TO</small>
                                    <div class="fw-bold">Acme Corporation</div>
                                </div>
                                <table class="table table-sm">
                                    <tr>
                                        <td>Web Development</td>
                                        <td class="text-end">$500.00</td>
                                    </tr>
                                    <tr>
                                        <td>Consulting</td>
                                        <td class="text-end">$300.00</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Total</strong></td>
                                        <td class="text-end"><strong>$800.00</strong></td>
                                    </tr>
                                </table>
                                <span class="badge bg-success">Paid</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Everything You Need to <span class="text-violet">Invoice Smarter</span></h2>
            <p class="lead text-muted">Powerful features designed to streamline your invoicing workflow</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h4 class="mb-3">Quick Invoice Creation</h4>
                    <p class="text-muted">
                        Create professional invoices in seconds with our intuitive interface.
                        Add items, calculate taxes, and apply discounts effortlessly.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h4 class="mb-3">Customer Management</h4>
                    <p class="text-muted">
                        Keep all your customer information organized in one place.
                        Track payment history and manage relationships easily.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <h4 class="mb-3">Real-time Analytics</h4>
                    <p class="text-muted">
                        Get instant insights into your revenue, outstanding payments,
                        and business performance with our dashboard.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4 class="mb-3">Secure & Reliable</h4>
                    <p class="text-muted">
                        Your data is protected with bank-level security.
                        Automatic backups ensure you never lose important information.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h4 class="mb-3">Mobile Friendly</h4>
                    <p class="text-muted">
                        Access your invoices anywhere, anytime. Our responsive design
                        works perfectly on desktop, tablet, and mobile devices.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <h4 class="mb-3">Payment Tracking</h4>
                    <p class="text-muted">
                        Monitor invoice status from draft to paid. Get notified about
                        overdue payments and maintain healthy cash flow.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-violet-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-violet mb-2">10K+</h2>
                    <p class="text-muted">Invoices Created</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-violet mb-2">5K+</h2>
                    <p class="text-muted">Happy Users</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-violet mb-2">$2M+</h2>
                    <p class="text-muted">Revenue Tracked</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-violet mb-2">99.9%</h2>
                    <p class="text-muted">Uptime</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">How It <span class="text-violet">Works</span></h2>
            <p class="lead text-muted">Get started in three simple steps</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">1</div>
                    <h4 class="mb-3">Create Your Account</h4>
                    <p class="text-muted">
                        Sign up for free in seconds. No credit card required.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">2</div>
                    <h4 class="mb-3">Add Your Customers</h4>
                    <p class="text-muted">
                        Import or manually add customer information to your account.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="step-card text-center p-4">
                    <div class="step-number mb-3">3</div>
                    <h4 class="mb-3">Create Invoices</h4>
                    <p class="text-muted">
                        Generate professional invoices and start getting paid faster.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-violet text-white">
    <div class="container text-center">
        <h2 class="display-4 fw-bold mb-4">Ready to Get Started?</h2>
        <p class="lead mb-4">Join thousands of businesses already using Invoice App</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-5">
            Start Free Trial <i class="bi bi-arrow-right"></i>
        </a>
        <p class="mt-3 mb-0">
            <small>Already have an account? <a asp-controller="Account" asp-action="Login" class="text-white"><u>Sign in</u></a></small>
        </p>
    </div>
</section>

<!-- Footer -->
<footer class="footer-section py-4 bg-dark text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5><i class="bi bi-receipt"></i> Invoice App</h5>
                <p class="text-muted">Professional invoicing made simple.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-0 text-muted">&copy; 2025 Invoice App. All rights reserved.</p>
            </div>
        </div>
    </div>
