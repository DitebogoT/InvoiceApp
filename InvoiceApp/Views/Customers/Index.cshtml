<!-- Views/Customers/Index.cshtml -->
@model IEnumerable<InvoiceApp.Models.Customer>
@using InvoiceApp.Models

@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Customers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Add Customer
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>City</th>
                                <th>Country</th>
                                <th style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td><strong>@customer.Name</strong></td>
                                    <td>
                                        <a href="mailto:@customer.Email">@customer.Email</a>
                                    </td>
                                    <td>@customer.Phone</td>
                                    <td>@customer.City</td>
                                    <td>@customer.Country</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@customer.Id"
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@customer.Id"
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@customer.Id"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle"></i> No customers found.
                    <a asp-action="Create" class="alert-link">Add your first customer</a>
                </div>
            }
        </div>
    </div>
</div>