<!-- Views/Customers/Index.cshtml -->
@model IEnumerable<InvoiceApp.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Add Customer
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Name</td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>@customer.City</td>
                            <td>@customer.Country</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>