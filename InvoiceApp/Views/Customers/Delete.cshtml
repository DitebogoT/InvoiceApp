<!-- Views/Customers/Delete.cshtml -->
@model InvoiceApp.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-exclamation-triangle"></i> Delete Customer</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to delete this customer?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address, @Model.City, @Model.Country</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Customer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>